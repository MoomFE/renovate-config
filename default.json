{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "schedule:weekly",
    "group:allNonMajor",
    ":semanticCommitTypeAll(chore)"
  ],
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    },
    {
      "groupName": "packageManager",
      "matchPackagePrefixes": ["npm", "yarn", "pnpm"]
    },
    {
      "groupName": "eslint",
      "matchPackagePrefixes": ["eslint", "@moomfe/eslint-config", "@antfu/eslint-config"]
    },
    {
      "groupName": "mixte",
      "matchPackagePrefixes": ["mixte", "@mixte/"]
    },
    {
      "groupName": "vue",
      "matchPackagePrefixes": ["vue", "@vue/"]
    },
    {
      "groupName": "vitest",
      "matchPackagePrefixes": ["vitest", "@vitest/"]
    },
    {
      "groupName": "dcloudio",
      "matchPackagePrefixes": ["@dcloudio/"]
    }
  ]
}
