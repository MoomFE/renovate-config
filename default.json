{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "schedule:monthly",
    "group:allNonMajor",
    ":semanticCommitTypeAll(chore)"
  ],
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    },
    {
      "matchDepTypes": ["peerDependencies"],
      "enabled": false
    },
    {
      "groupName": "ts",
      "matchPackageNames": ["typescript", "type-fest", "tsx"]
    },
    {
      "groupName": "eslint",
      "matchPackagePrefixes": ["eslint", "@moomfe/eslint-config", "@antfu/eslint-config"]
    },
    {
      "groupName": "mixte",
      "matchPackageNames": ["mixte"],
      "matchPackagePrefixes": ["@mixte/"]
    },
    {
      "groupName": "vue",
      "matchPackageNames": ["vue", "vue-tsc"],
      "matchPackagePrefixes": ["@vue/"]
    },
    {
      "groupName": "pinia",
      "matchPackageNames": ["pinia"],
      "matchPackagePrefixes": ["@pinia/"]
    },
    {
      "groupName": "vueuse",
      "matchPackagePrefixes": ["@vueuse/"]
    },
    {
      "groupName": "unocss",
      "matchPackagePrefixes": ["unocss", "@unocss/"]
    },
    {
      "groupName": "vite",
      "matchPackageNames": ["vite", "rollup", "postcss", "sass"],
      "matchPackagePrefixes": ["@vitejs/", "unplugin-", "rollup-", "@rollup/"]
    },
    {
      "groupName": "vitest",
      "matchPackageNames": ["vitest", "vitest-browser-vue", "playwright", "jsdom"],
      "matchPackagePrefixes": ["@vitest/"]
    },
    {
      "groupName": "dcloudio",
      "matchPackagePrefixes": ["@dcloudio/"]
    },
    {
      "groupName": "shiki",
      "matchPackageNames": ["shiki", "shiki-magic-move"],
      "matchPackagePrefixes": ["@shikijs/"]
    },
    {
      "groupName": "nuxt",
      "matchPackageNames": ["nuxt"],
      "matchPackagePrefixes": ["@nuxt/"],
      "postUpgradeTasks": {
        "commands": ["npx nuxi@latest upgrade --force"],
        "fileFilters": ["pnpm-lock.yaml", "yarn.lock", "package-lock.json"]
      }
    },
    {
      "groupName": "react",
      "matchPackageNames": ["react", "react-dom"],
      "matchPackagePrefixes": ["@types/react"]
    },
    {
      "groupName": "ui",
      "matchPackageNames": ["element-plus", "naive-ui", "primevue"],
      "matchPackagePrefixes": ["@ant-design/", "@arco-design/", "@primevue/"]
    }
  ]
}
