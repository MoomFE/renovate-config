{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "schedule:monthly",
    "group:allNonMajor",
    ":semanticCommitTypeAll(chore)"
  ],
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    },
    {
      "groupName": "eslint",
      "matchPackagePrefixes": ["eslint", "@moomfe/eslint-config", "@antfu/eslint-config"]
    },
    {
      "groupName": "mixte",
      "matchPackagePrefixes": ["mixte", "@mixte/"]
    },
    {
      "groupName": "vue",
      "matchPackagePrefixes": ["vue", "@vue/"]
    },
    {
      "groupName": "vitest",
      "matchPackagePrefixes": ["vitest", "@vitest/"]
    },
    {
      "groupName": "dcloudio",
      "matchPackagePrefixes": ["@dcloudio/"]
    },
    {
      "groupName": "nuxt",
      "matchPackageNames": ["nuxt"],
      "postUpgradeTasks": {
        "commands": ["npx nuxi@latest upgrade --force"],
        "fileFilters": ["pnpm-lock.yaml", "yarn.lock", "package-lock.json"]
      }
    }
  ]
}
